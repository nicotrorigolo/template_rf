node {  
    stage('verif') { 
        sh 'ls -all'
    }
}

pipeline {
    agent {
        docker { 
            image 'nicorigolo/robotframework_linux:latest' 
            args '-e WORKSPACE=/robots/template_rf'
        }
    }
    stages {
        stage('Test') {
            steps {
                dir('tests') {
                    sh "pwd"
                    sh 'ls -all'
                    sh 'robot data_driven.robot'
                    sh 'robot testSuiteGenerated.robot'
                }
            }
        }
    }
}